<AjustesPage>:
    FloatLayout:
        canvas:
            Rectangle:
                size: self.size
                pos: self.pos
                source: "icones/bg1.png"
        Label:
            canvas.before:
                Rectangle:
                    size: self.size
                    pos: self.pos
                    source: "icones/botao_fino.png"

            id: id_vendedor
            bold: True
            text: "Seu ID Ãšnico: 1"
            pos_hint: {"right": 0.85, "top": 0.95}
            size_hint: 0.7,0.2

        #botao voltar
        FloatLayout:
            pos_hint: {"right": 1, "top": 0.12}
            size_hint: 1,0.12
            canvas:
                Color:
                    rgb: utils.get_color_from_hex("#006D7E")
                Rectangle:
                    size: self.size
                    pos: self.pos

            ImageButton:
                pos_hint: {"right": 1, "top": 0.9}
                size_hint: 0.33,0.8
                source: "icones/voltar.png"
                on_release: on_release: app.mudar_tela("homepage")

        #mudar foto de perfil
        ImageButton:

            pos_hint: {"right": 0.45, "top": 0.7}
            size_hint: 0.5,0.15
            source: "icones/foto_perfil.png"
            on_release: on_release: app.mudar_tela("mudarfoto")

        LabelButton:

            pos_hint: {"right": 0.9, "top": 0.7}
            size_hint: 0.5,0.15
            text: "Mudar Foto de perfil"
            on_release: on_release: app.mudar_tela("mudarfoto")

        #acompanhar vendedor
        ImageButton:

            pos_hint: {"right": 0.45, "top": 0.5}
            size_hint: 0.5,0.15
            source: "icones/adicionar_vendedor.png"
            on_release: app.mudar_tela("acompanharvendedor")

        LabelButton:

            pos_hint: {"right": 0.9, "top": 0.5}
            size_hint: 0.5,0.15
            text: "Acompanhar Vendedor"
            on_release: app.mudar_tela("acompanharvendedor")

        #ver todas vendas
        ImageButton:

            pos_hint: {"right": 0.45, "top": 0.3}
            size_hint: 0.5,0.15
            source: "icones/vendas_empresa.png"
            on_release: on_release: app.carregar_todas_as_vendas()

        LabelButton:

            pos_hint: {"right": 0.9, "top": 0.3}
            size_hint: 0.5,0.15
            text: "Ver todas as vendas"
            on_release: on_release: app.carregar_todas_as_vendas()