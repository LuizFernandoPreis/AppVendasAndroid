<MudarFoto>:
    FloatLayout:
        canvas:
            Rectangle:
                size: self.size
                pos: self.pos
                source: "icones/bg1.png"
        Label:
            bold: True
            text: "Selecione sua Foto de Perfil"
            pos_hint: {"right": 0.85, "top": 0.95}
            size_hint: 0.7,0.2

        # Lista fotos
        ScrollView:

            pos_hint: {"right": 1, "top": 0.75}
            size_hint: 1, 0.63
            GridLayout:
                id: fotos_perfil
                cols:3
                size_hint_y: None
                spacing: 3, 3
                height: self.minimum_height
                row_default_height: "90dp"
                row_force_default: True

        FloatLayout:
            pos_hint: {"right": 1, "top": 0.12}
            size_hint: 1,0.12
            canvas:
                Color:
                    rgb: utils.get_color_from_hex("#006D7E")
                Rectangle:
                    size: self.size
                    pos: self.pos

            ImageButton:
                pos_hint: {"right": 1, "top": 0.9}
                size_hint: 0.33,0.8
                source: "icones/voltar.png"
                on_release: on_release: app.mudar_tela("ajustespage")